{
    "name": "Niko",
    "style": "Dark",
    "author": [
        { 
            "role": "Original theme creator",
            "name": "Niko Milo",
            "url": "https://www.monokai.nl/",
            "theme": "http://www.monokai.nl/blog/wp-content/asdev/Monokai.tmTheme"
        },
        { 
            "role": "JSON Port and Adaptation",
            "name": "Rene",
            "url": "https://github.com/renerocksai/"
        },
        {
            "name": "Niko"
        }
    ],
    "version": "1.1",
    
    "editor": {
        "caretColor": "#0F79FF",
        "backgroundColor": "#063642",
        "selection" : {
            "backgroundColor": "#355359",
            "unfocusedBackgroundColor": "#DCDCDC"
        },
        "highlight": {
            "color": "#DCDBCC",
            "backgroundColor": "#5396B7",
            "unfocusedBackgroundColor": "#88a3b0"
        },
        "invisibles": {
            "color": "#A3975A"
        }
    },

    "savedSearchesSidebar": {
        "color": "#A3975A",
        "backgroundColor": "#355359",
        "highlightedBackgroundColor": "#6E77C1",
        "border": "#A3975A",
        "iconColors": {
            "default": "#A3975A"
        }
    },
    
    "resultsList": {
        "color": "#92A1A1",
        "backgroundColor": "#063642",
        "alternateBackgroundColor": "#1D434B",
        "selection": {
            "color": "#FEFAF3",
            "backgroundColor": "#168DCC",
            "unfocusedColor": "#FEFAF3",
            "unfocusedBackgroundColor": "#88a3b0"
        },
        "border": "#A3975A"
    },
    
    "styles": {
        "base": {
            "color": "#92A1A1",
        },

        "h1": {
            "color": "#6E77C1",
            "font": { "style": "bold" }
        },
        "h2": {
            "color": "#6E77C1",
            "font": { "style": "bold" }
        },
        "h3": {
            "color": "#6E77C1",
            "font": { "style": "bold" }
        },
        "h4": {
            "color": "#6E77C1",
            "font": { "style": "bold" }
        },
        "h5": {
            "color": "#6E77C1",
            "font": { "style": "bold" }
        },
        "h6": {
            "color": "#6E77C1",
            "font": { "style": "bold" }
        },

        "horizontalRule": {},

        "codeBlock": {
            "color": "#8F2E2C",
            "backgroundColor": "#222222"
        },
        "inlineCode": {
            "color": "#6D8707"
        },

        "blockquote": {
            "color": "#A58770",
            "syntax": { "color": "#66d9ef" },
            "font": { "style": "italic" }
        },
        "list": {
            "syntax": { "color" : "#A3975A" }
        },

        "emphasis": {
            "color": "#A58770",
            "syntax": { "color":  "#AAAAAA" },
            "font": { "style": "italic" }
        },
        "strong": {
            "color": "#A3975A",
            "syntax": { "color":  "#AAAAAA" },
            "font": { "style": "bold" }
        },

        "image": {
            "color": "#66D9EF",
            "syntax": { "color": "#777777" }
        },
        "footnote": {
            "color": "#AE81FF"
        },
        "link": {
            "color": "#5396B7",
            "syntax": { "color": "#777777" }
        },
        "referenceDefinition": {
            "color": "#66D9EF"
        },

        "comment": {
            "color": "#BB608F",
            "font": { "style": "regular" }
        }
    }
}
